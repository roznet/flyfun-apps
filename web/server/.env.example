# LangSmith Configuration
# Required for aviation agent tracing and debugging
LANGCHAIN_TRACING_V2=true
LANGCHAIN_API_KEY=your_langsmith_api_key_here
LANGCHAIN_PROJECT=FlyFun
LANGCHAIN_ENDPOINT=https://api.smith.langchain.com

# OpenAI API Configuration
# Required for aviation agent LLM models
OPENAI_API_KEY=your_openai_api_key_here

# Aviation Agent LLM Configuration
# Models used for planner and formatter nodes
AVIATION_AGENT_PLANNER_MODEL=gpt-4o-mini
AVIATION_AGENT_FORMATTER_MODEL=gpt-4o-mini

# ============================================================================
# OAuth Authentication Configuration
# ============================================================================

# Google OAuth (https://console.cloud.google.com/apis/credentials)
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# Apple OAuth (https://developer.apple.com/account/resources/identifiers/list/serviceId)
APPLE_CLIENT_ID=your_apple_service_id_here
APPLE_TEAM_ID=your_apple_team_id_here
APPLE_KEY_ID=your_apple_key_id_here
APPLE_PRIVATE_KEY_PATH=/path/to/AuthKey_XXXXXX.p8

# JWT Configuration
JWT_SECRET_KEY=change-this-to-a-random-secret-in-production

# OAuth redirect base URL (set to your domain in production)
AUTH_BASE_URL=http://localhost:8000
